<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/check"
        android:drawable="@drawable/ic_check"
        android:state_checked="false" />
    <item
        android:id="@+id/uncheck"
        android:drawable="@drawable/ic_cross"
        android:state_checked="true" />

    <transition
        android:drawable="@drawable/avd_check_to_cross"
        android:fromId="@id/check"
        android:toId="@id/uncheck" />

    <transition
        android:drawable="@drawable/avd_cross_to_check"
        android:fromId="@id/uncheck"
        android:toId="@id/check" />
</animated-selector>