<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:contentPadding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_deal_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/item_deal_client_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:adjustViewBounds="true"
            android:background="?colorSecondaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            android:tint="?colorOnSecondaryContainer"
            android:src="@drawable/ic_money_sign" />

        <TextView
            android:id="@+id/item_deal_title_txt"
            android:layout_width="0dp"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            app:layout_constraintStart_toEndOf="@id/item_deal_icon"
            app:layout_constraintTop_toTopOf="@id/item_deal_icon"
            app:layout_constraintEnd_toStartOf="@id/item_deal_date_txt"
            tools:text="Deal Title"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/item_deal_amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintTop_toBottomOf="@id/item_deal_client_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1500 USD" />

        <TextView
            android:id="@+id/item_deal_client_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/item_deal_title_txt"
            app:layout_constraintStart_toEndOf="@id/item_deal_icon"
            app:layout_constraintEnd_toStartOf="@id/item_deal_amount_txt"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            tools:text="Client Name" />

        <TextView
            android:id="@+id/item_deal_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintTop_toTopOf="@id/item_deal_title_txt"
            app:layout_constraintBottom_toBottomOf="@id/item_deal_title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="25.03.25" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>