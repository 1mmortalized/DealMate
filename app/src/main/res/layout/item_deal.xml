<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_deal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?colorOnSurface"
        android:alpha="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp" />

    <com.aitsuki.swipe.SwipeLayout
        android:id="@+id/item_deal_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoClose="true"
        app:preview="none"
        app:designer="@string/classic_designer">

        <!-- This is the left menu, because it specifies `layout_gravity=start` -->
        <ImageView
            android:id="@+id/item_deal_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit"
            android:foreground="?selectableItemBackground"
            android:background="?colorTertiaryContainer"
            app:tint="?colorOnTertiaryContainer"
            android:paddingHorizontal="24dp"
            android:layout_gravity="start" />

        <!-- This is the right menu -->
        <ImageView
            android:id="@+id/item_deal_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:foreground="?selectableItemBackground"
            android:background="?colorErrorContainer"
            app:tint="?colorOnErrorContainer"
            android:paddingHorizontal="24dp"
            android:layout_gravity="end" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_deal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_deal_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1"
                android:adjustViewBounds="true"
                android:background="?colorSecondaryContainer"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
                android:tint="?colorOnSecondaryContainer"
                android:src="@drawable/ic_money_sign_scaled" />

            <TextView
                android:id="@+id/item_deal_title_txt"
                android:layout_width="0dp"
                app:layout_constrainedWidth="true"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:ellipsize="none"
                android:requiresFadingEdge="horizontal"
                android:singleLine="true"
                android:fadingEdgeLength="20dp"
                app:layout_constraintStart_toEndOf="@id/item_deal_icon"
                app:layout_constraintTop_toTopOf="@id/item_deal_icon"
                app:layout_constraintEnd_toStartOf="@id/item_deal_date_txt"
                tools:text="Deal Title"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/item_deal_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:layout_constraintTop_toBottomOf="@id/item_deal_title_txt"
                app:layout_constraintBottom_toBottomOf="@id/item_deal_icon"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="1500 USD" />

            <TextView
                android:id="@+id/item_deal_client_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:alpha="0.7"
                app:layout_constraintTop_toTopOf="@id/item_deal_amount_txt"
                app:layout_constraintBottom_toBottomOf="@id/item_deal_amount_txt"
                app:layout_constraintStart_toEndOf="@id/item_deal_icon"
                app:layout_constraintEnd_toStartOf="@id/item_deal_amount_txt"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="Client Name" />

            <TextView
                android:id="@+id/item_deal_date_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                app:layout_constraintTop_toTopOf="@id/item_deal_title_txt"
                app:layout_constraintBottom_toBottomOf="@id/item_deal_title_txt"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="25.03.25" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.aitsuki.swipe.SwipeLayout>
</LinearLayout>