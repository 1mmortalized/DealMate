<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_event_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_event_title_txt"
            app:layout_constraintBottom_toBottomOf="@id/fragment_event_title_txt"
            app:tint="?colorOnSurface" />

        <TextView
            android:id="@+id/fragment_event_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            tools:text="Meeting with team"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/fragment_event_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_event_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            tools:text="Tuesday, Nov 07, 24"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/fragment_event_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_event_title_txt"/>

        <TextView
            android:id="@+id/fragment_event_time_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            tools:text="12:00 - 12:30"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/fragment_event_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_event_date_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/layout_event_complete_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/mark_as_completed"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart" />
        <Button
            android:id="@+id/layout_event_uncomplete_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/mark_as_uncompleted"
            app:icon="@drawable/ic_cross"
            android:visibility="gone"
            app:iconGravity="textStart" />

        <Button
            android:id="@+id/layout_event_edit_btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_edit" />

        <Button
            android:id="@+id/layout_event_delete_btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>