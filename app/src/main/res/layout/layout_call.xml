<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/layout_call_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_call"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_call_title_txt"
            app:layout_constraintBottom_toBottomOf="@id/layout_call_title_txt"
            app:tint="?colorOnSurface" />

        <TextView
            android:id="@+id/layout_call_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            tools:text="Call with Client A"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/layout_call_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/layout_call_client_name"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            app:layout_constraintStart_toEndOf="@id/layout_call_icon"
            app:layout_constraintEnd_toStartOf="@id/layout_call_bullet_delimiter"
            app:layout_constraintTop_toBottomOf="@id/layout_call_title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            tools:text="Client Name"
            android:includeFontPadding="false"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/layout_call_client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/layout_call_client_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/layout_call_bullet_delimiter"
            app:layout_constraintTop_toTopOf="@id/layout_call_client_name"
            android:includeFontPadding="false"
            tools:text="123-456-7890" />

        <TextView
            android:id="@+id/layout_call_bullet_delimiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_call_client_name"
            app:layout_constraintStart_toEndOf="@id/layout_call_client_name"
            app:layout_constraintEnd_toStartOf="@id/layout_call_client_phone"
            app:layout_constraintTop_toTopOf="@id/layout_call_client_name"
            android:text="â€¢"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/layout_call_time_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            tools:text="12:00, Tuesday, Nov 07, 25"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:alpha="0.7"
            app:layout_constraintStart_toEndOf="@id/layout_call_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_call_client_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialSplitButton
            android:id="@+id/layout_call_split_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <Button
                style="?materialSplitButtonStyle"
                android:id="@+id/layout_call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Make a call"
                app:icon="@drawable/ic_call"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/layout_call_complete_btn"
                style="?materialSplitButtonIconFilledStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ansd_complete_uncomplete" />

        </com.google.android.material.button.MaterialSplitButton>

        <Button
            android:id="@+id/layout_call_edit_btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_edit" />

        <Button
            android:id="@+id/layout_call_delete_btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>