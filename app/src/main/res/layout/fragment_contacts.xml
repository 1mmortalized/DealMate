<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_contacts_rec_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="25dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.wynneplaga.materialScrollBar2.MaterialScrollBar
        android:id="@+id/fragment_contacts_scrollbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:msb_recyclerView="@id/fragment_contacts_rec_view"
        app:msb_handleColor="?colorSecondaryContainer" />
</FrameLayout>