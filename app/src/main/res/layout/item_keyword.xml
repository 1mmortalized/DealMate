<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_keyword_completed_count_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shapeAppearance="@style/Theme.DealMate.KeywordCardShape"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="?colorPrimaryContainer"
            app:contentPaddingTop="8dp"
            app:contentPaddingBottom="8dp"
            app:contentPaddingLeft="20dp"
            app:contentPaddingRight="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/item_keyword_completed_count_txt"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_check_14sp"
                app:drawableTint="?colorOnPrimaryContainer"
                android:textColor="?colorOnPrimaryContainer"
                android:gravity="center"
                android:minEms="2"
                tools:text="12" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_keyword_postponed_count_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:shapeAppearance="@style/Theme.DealMate.KeywordCardShape"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="?colorTertiaryContainer"
            app:contentPaddingTop="8dp"
            app:contentPaddingBottom="8dp"
            app:contentPaddingLeft="20dp"
            app:contentPaddingRight="8dp"
            android:layout_marginEnd="-12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_keyword_completed_count_card">

            <TextView
                android:id="@+id/item_keyword_postponed_count_txt"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_pending_actions_14sp"
                app:drawableTint="?colorOnTertiaryContainer"
                android:textColor="?colorOnTertiaryContainer"
                android:gravity="center"
                android:minEms="2"
                tools:text="5"
                android:layout_gravity="center" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_keyword_text_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:shapeAppearance="@style/Theme.DealMate.KeywordCardShape"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="?colorSurfaceContainerLow"
            android:layout_marginEnd="-12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_keyword_postponed_count_card"
            app:cardPreventCornerOverlap="false">

            <TextView
                android:id="@+id/item_keyword_text"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_tag_16sp"
                app:drawableTint="?colorOnSurface"
                android:drawablePadding="2dp"
                android:includeFontPadding="false"
                tools:text="some keyword"
                android:ellipsize="none"
                android:requiresFadingEdge="horizontal"
                android:singleLine="true"
                android:fadingEdgeLength="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>