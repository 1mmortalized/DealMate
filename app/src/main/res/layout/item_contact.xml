<?xml version="1.0" encoding="utf-8"?>

<com.aitsuki.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_contact_swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:autoClose="true"
    app:preview="none"
    app:designer="@string/classic_designer">

    <!-- Left menu -->
    <ImageView
        android:id="@+id/item_contact_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_edit"
        android:foreground="?selectableItemBackground"
        android:background="?colorTertiaryContainer"
        app:tint="?colorOnTertiaryContainer"
        android:paddingHorizontal="24dp"
        android:layout_gravity="start" />

    <!-- Right menu -->
    <ImageView
        android:id="@+id/item_contact_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete"
        android:foreground="?selectableItemBackground"
        android:background="?colorErrorContainer"
        app:tint="?colorOnErrorContainer"
        android:paddingHorizontal="24dp"
        android:layout_gravity="end" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_contact_avatar_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:adjustViewBounds="true"
            android:background="?colorSecondaryContainer"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
            android:tint="?colorOnSecondaryContainer"
            android:src="@drawable/avatar_default_scaled" />

        <TextView
            android:id="@+id/item_contact_name"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            app:layout_constraintStart_toEndOf="@id/item_contact_avatar_img"
            app:layout_constraintEnd_toStartOf="@id/item_contact_bullet_delimiter"
            app:layout_constraintTop_toTopOf="@id/item_contact_avatar_img"
            tools:text="Client Name"
            android:includeFontPadding="false"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/item_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/item_contact_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_contact_bullet_delimiter"
            app:layout_constraintTop_toTopOf="@id/item_contact_name"
            tools:text="123-456-7890" />

        <TextView
            android:id="@+id/item_contact_bullet_delimiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/item_contact_name"
            app:layout_constraintStart_toEndOf="@id/item_contact_name"
            app:layout_constraintEnd_toStartOf="@id/item_contact_phone"
            app:layout_constraintTop_toTopOf="@id/item_contact_name"
            android:text="â€¢"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/item_contact_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/item_contact_name"
            app:layout_constraintStart_toEndOf="@id/item_contact_avatar_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/item_contact_avatar_img"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            tools:text="client@example.com" />

        <TextView
            android:id="@+id/item_contact_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceTitleMedium"
            app:layout_constraintStart_toStartOf="@id/item_contact_avatar_img"
            app:layout_constraintEnd_toEndOf="@id/item_contact_avatar_img"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="A" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.aitsuki.swipe.SwipeLayout>