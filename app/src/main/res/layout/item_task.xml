<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/item_task_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/item_task_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_task_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            tools:text="Task 1" />

        <ImageView
            android:id="@+id/item_task_client_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/item_task_checkbox"
            app:layout_constraintTop_toTopOf="@id/item_task_client_txt"
            app:layout_constraintBottom_toBottomOf="@id/item_task_client_txt"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_person_20"
            app:tint="?colorOnSurface" />

        <TextView
            android:id="@+id/item_task_client_txt"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/item_task_priority_icon"
            app:layout_constraintStart_toEndOf="@id/item_task_client_icon"
            app:layout_constraintTop_toBottomOf="@id/item_task_title_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:ellipsize="none"
            android:requiresFadingEdge="horizontal"
            android:singleLine="true"
            android:fadingEdgeLength="20dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            tools:text="Client Name"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"/>

        <ImageView
            android:id="@+id/item_task_priority_icon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@id/item_task_priority_txt"
            app:layout_constraintStart_toEndOf="@id/item_task_client_txt"
            app:layout_constraintTop_toTopOf="@id/item_task_client_txt"
            app:layout_constraintBottom_toBottomOf="@id/item_task_client_txt"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_stat_3_20" />

        <TextView
            android:id="@+id/item_task_priority_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            app:layout_constraintStart_toEndOf="@id/item_task_priority_icon"
            app:layout_constraintTop_toBottomOf="@id/item_task_title_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="2dp"
            tools:text="High" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>